<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toastlayoutt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/progress_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/progress_anime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/amin_pgbar" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:indeterminateDrawable="@drawable/progressbarstyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/suggest_empty"
            android:textColor="#C62828" />

        <TextView
            android:id="@+id/progress_Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:text="@string/Music"
            android:textColor="#C62828"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progress_Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="@string/speechText2"
            android:textColor="#FDD835"
            android:textStyle="bold" />

        <Button
            android:id="@+id/progress_button1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="60dp"
            android:onClick="onButton1"
            android:text="@string/speechText"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/progress_button2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="60dp"
            android:onClick="onButton2"
            android:text="@string/speechText2" />

        <Button
            android:id="@+id/progress_button3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="100dp"
            android:onClick="onButton3"
            android:text="@string/speechText3"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/progress_exitbutton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="100dp"
            android:onClick="onExit"
            android:text="@string/back" />
    </FrameLayout>


</android.support.constraint.ConstraintLayout>