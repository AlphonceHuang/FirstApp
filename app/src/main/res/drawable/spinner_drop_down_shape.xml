<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--客制化下拉式選單-->
    <item>
        <shape>
            <!--stroke  android:width邊框寬度, android:color邊框顏色-->
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <!--圓角-->
            <corners android:radius="5dp" />
            <!--背景顏色-->
            <solid android:color="#7874EE"></solid>
            <!--最後面留白長度-->
            <padding android:right="5dp" />

            <!--漸層 angle:
                0:  左到右
                90: 下到上
                180:右到左     -->
            <gradient
                android:startColor="#EAEAEA"
                android:centerColor="#D8D8D8"
                android:endColor="#949494"
                android:angle="0"/>
        </shape>
    </item>
    <item>
        <!-- 選單後面放一張箭頭圖片-->
        <bitmap
            android:gravity="end"
            android:src="@android:drawable/arrow_down_float" />
    </item>
</layer-list>
